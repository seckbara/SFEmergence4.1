    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/multiple-select/1.2.0/multiple-select.min.css" integrity="sha256-SOf2PkUgyKvfCs+PJ/5yZzfP5rWVG33Cj5VUGmB9mxA=" crossorigin="anonymous" />
{% endblock %}

 {% block page_title %} Ajouter {% endblock %}

 {% block title_page_block %}Ajouter un adherent{% endblock %}

{% block content %}
